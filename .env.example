# ============================================
# Playwright Stealth Email Scraper
# Environment Configuration
# ============================================

# === Scraper Mode ===
# Run browser in headless mode (no visible window)
HEADLESS=true

# Enable stealth mode (anti-detection features)
ENABLE_STEALTH=true

# === File Paths ===
# Path to CSV file with search queries
CSV_PATH=/app/input/search.queries.1.csv

# Directory to save scraped emails
OUTPUT_DIR=/app/output

# === Timing Settings ===
# Delay between pages (seconds) - randomized between min and max
MIN_PAGE_DELAY=3.0
MAX_PAGE_DELAY=12.0

# === Search Settings ===
# Maximum number of Google result pages to scrape per query
MAX_PAGES_PER_QUERY=10

# === Proxy Configuration ===
# Enable proxy usage
USE_PROXY=false

# Option 1: Single proxy server
# Format: http://host:port or http://user:pass@host:port
# PROXY_SERVER=http://proxy.example.com:8080
# PROXY_USERNAME=your_username
# PROXY_PASSWORD=your_password

# Option 2: Proxy list file (one proxy per line)
# PROXY_LIST_FILE=/app/proxies.txt

# === Advanced Settings ===
# These are optional and have sensible defaults

# Rotate proxy after each query (when using proxy list)
# ROTATE_PROXY_PER_REQUEST=true

# Maximum retries on failure
# MAX_RETRIES=3

# Retry delay in seconds
# RETRY_DELAY=5.0
